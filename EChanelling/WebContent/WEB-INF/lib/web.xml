<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>InsertAppointment</servlet-name>
		<servlet-class>controller.InsertAppointment</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>InsertAppointment</servlet-name>
		<url-pattern>/InsertAppointment</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>GetAppointmentServlet</servlet-name>
		<servlet-class>controller.GetAppointmentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAppointmentServlet</servlet-name>
		<url-pattern>/GetAppointmentServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateAppointmentServlet</servlet-name>
		<servlet-class>controller.UpdateAppointmentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateAppointmentServlet</servlet-name>
		<url-pattern>/UpdateAppointmentServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DeleteServlet</servlet-name>
		<servlet-class>controller.DeleteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteServlet</servlet-name>
		<url-pattern>/DeleteServlet</url-pattern>
	</servlet-mapping>
    
	
    

</web-app>